[
  {
    "name": "tech_name_rule",
    "description": "Generate tech-related names",
    "condition": "context.category == 'tech'",
    "actions": [
      {
        "type": "assign",
        "variable": "prefix",
        "value": "random(context.resources['prefix_tech'])"
      },
      {
        "type": "assign",
        "variable": "suffix",
        "value": "random(context.resources['suffix_tech'])"
      },
      {
        "type": "assign",
        "variable": "result",
        "value": "context.prefix + ' ' + context.suffix"
      }
    ]
  },
